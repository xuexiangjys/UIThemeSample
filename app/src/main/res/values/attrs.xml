<resources>
    <attr name="LoggerTextStyle" format="reference" />

    <attr name="LoadingStyle" format="reference"/>
    <declare-styleable name="LoadingView">
        <!--loading控件的大小，默认32dp-->
        <attr name="lv_loading_view_size" format="dimension" />
        <!--loading控件的颜色，默认白色-->
        <attr name="lv_loading_view_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MultiEditText">
        <!--最大输入文字的数目，默认240-->
        <attr name="met_maxCount" format="integer" />
        <!--是否忽略中英文的差异，默认true-->
        <attr name="met_ignoreCnOrEn" format="boolean" />
        <!--输入框提示文字-->
        <attr name="met_hintText" format="string|reference" />
        <!--输入框提示文字的颜色-->
        <attr name="met_hintTextColor" format="color|reference" />
        <!--输入框的padding， 默认10dp-->
        <attr name="met_contentPadding" format="dimension" />
        <!--输入框背景-->
        <attr name="met_contentBackground" format="reference" />
        <!--输入框的内容-->
        <attr name="met_contentText" format="string|reference" />
        <!--输入框文字的大小-->
        <attr name="met_contentTextSize" format="dimension|reference" />
        <!--输入框文字的颜色-->
        <attr name="met_contentTextColor" format="color|reference" />
        <!--输入框的高度，默认140dp-->
        <attr name="met_contentViewHeight" format="dimension|reference" />
        <!--输入框的高度是否是固定高度，默认是true-->
        <attr name="met_isFixHeight" format="boolean" />
        <!--统计数字显示剩余数目,默认false-->
        <attr name="met_showSurplusNumber" format="boolean" />
    </declare-styleable>
    <attr format="reference" name="MultiEditTextStyle"/>

    <!-- CustomTextView的自定义样式属性 -->
    <attr name="CustomTextStyle" format="reference"/>
    <declare-styleable name="CustomTextView">
        <!-- 文字尺寸样式 -->
        <attr name="ctv_size" format="enum">
            <!--  12sp -->
            <enum name="small" value="0"/>
            <!--  16sp -->
            <enum name="medium" value="1"/>
            <!--  21sp -->
            <enum name="large" value="2"/>
        </attr>
        <!-- 文字的样式是否是“*” -->
        <attr name="ctv_is_password" format="boolean" />
    </declare-styleable>

    <attr name="test_dimension" format="dimension" />

</resources>